---
import { Icon } from "astro-icon/components";
import Hero from "../components/hero.astro";
import Layout from "../layouts/Layout.astro";
import { AppConfig } from "../utils/config";
---

<Layout title="Contact us" description="Get in touch.">
  <main>
    <Hero
      variant="auto"
      title="Contact Us"
      description="Provident cupiditate voluptatem et in. Quaerat fugiat ut assumenda excepturi exercitationem quasi. In deleniti eaque aut repudiandae et a id nisi."
    />

    <!-- Business Hours -->
    <section class="relative">
      <div class="container bg-base-100 py-12 mx-auto">
        <div class="flex flex-wrap justify-center">
          <div class="p-4 mb-10">
            <h2
              class="sm:text-xl text-2xl font-medium mb-4 text-center"
            >
              Business Hours
            </h2>
            <div class="flex my-6 justify-center">
              <div class="w-16 h-1 rounded-full bg-primary inline-flex"></div>
            </div>
            <div
              class="relative overflow-x-auto border border-base-200 rounded-lg shadow-lg shadow-base-300"
            >
              <table
                class="w-full text-sm text-left rtl:text-right table-zebra"
              >
                <thead class="text-xs uppercase border-b border-base-300">
                  <tr>
                    <th scope="col" class="px-6 py-3"> Weekday </th>
                    <th scope="col" class="px-6 py-3"> Hours </th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th
                      scope="row"
                      class="px-6 py-2 font-medium whitespace-nowrap"
                    >
                      Monday
                    </th>
                    <td class="px-6 py-2">
                      9:00 <small>AM</small> - 5:00 <small>PM</small>
                    </td>
                  </tr>
                  <tr>
                    <th
                      scope="row"
                      class="px-6 py-2 font-medium whitespace-nowrap"
                    >
                      Tuesday
                    </th>
                    <td class="px-6 py-2">
                      9:00 <small>AM</small> - 5:00 <small>PM</small>
                    </td>
                  </tr>
                  <tr>
                    <th
                      scope="row"
                      class="px-6 py-2 font-medium whitespace-nowrap"
                    >
                      Wednesday
                    </th>
                    <td class="px-6 py-2">
                      9:00 <small>AM</small> - 5:00 <small>PM</small>
                    </td>
                  </tr>
                  <tr>
                    <th
                      scope="row"
                      class="px-6 py-2 font-medium whitespace-nowrap"
                    >
                      Thursday
                    </th>
                    <td class="px-6 py-2">
                      9:00 <small>AM</small> - 5:00 <small>PM</small>
                    </td>
                  </tr>
                  <tr>
                    <th
                      scope="row"
                      class="px-6 py-2 font-medium whitespace-nowrap"
                    >
                      Friday
                    </th>
                    <td class="px-6 py-2">
                      9:00 <small>AM</small> - 5:00 <small>PM</small>
                    </td>
                  </tr>
                  <tr>
                    <th
                      scope="row"
                      class="px-6 py-2 font-medium whitespace-nowrap"
                    >
                      Saturday
                    </th>
                    <td class="px-6 py-2">
                      12:00 <small>PM</small> - 5:00 <small>PM</small>
                    </td>
                  </tr>
                  <tr>
                    <th
                      scope="row"
                      class="px-6 py-2 font-medium whitespace-nowrap"
                    >
                      Sunday
                    </th>
                    <td class="px-6 py-2"> Closed </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="p-4">
            <h2
              class="sm:text-xl text-2xl font-medium mb-4 text-center"
            >
              Contact Details
            </h2>
            <div class="flex my-6 justify-center">
              <div class="w-16 h-1 rounded-full bg-primary inline-flex"></div>
            </div>
            <div
              class="h-fit flex items-center border-gray-200 p-6 hover:bg-base-200 transition-colors"
            >
              <Icon
                name="mdi:map-marker"
                title="Address"
                size={30}
                class="text-gray-400 hover:text-primary transition-colors mr-4"
              />
              <div class="flex-grow">
                <h2 class="font-medium">Address</h2>
                <p>{AppConfig.contact.address}</p>
              </div>
            </div>
            <div
              class="h-fit flex items-center border-gray-200 p-6 hover:bg-base-200 transition-colors"
            >
              <Icon
                name="mdi:phone"
                title="Phone"
                size={30}
                class="text-gray-400 hover:text-primary transition-colors mr-4"
              />
              <div class="flex-grow">
                <h2 class="font-medium">Phone</h2>
                <p class="link-primary">
                  <a href={`tel:+${AppConfig.contact.phone}`}>
                    {AppConfig.contact.phone}
                  </a>
                </p>
              </div>
            </div>
            <div
              class="h-fit flex items-center border-gray-200 p-6 hover:bg-base-200 transition-colors"
            >
              <Icon
                name="mdi:email"
                title="Email"
                size={30}
                class="text-gray-400 hover:text-primary transition-colors mr-4"
              />
              <div class="flex-grow">
                <h2 class="font-medium">Email</h2>
                <p class="link-primary">
                  <a href={AppConfig.contact.email}>
                    {AppConfig.contact.email}
                  </a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Map & Form -->
    <section class="body-font relative">
      <div class="absolute inset-0 bg-gray-100">
        <iframe
          width="100%"
          height="100%"
          title="map"
          src="https://maps.google.com/maps?width=100%&height=600&hl=en&q=Toowoomba&output=embed"
          style="filter: grayscale(1) contrast(1.2) opacity(0.8);"></iframe>
      </div>
      <div class="container px-5 py-24 mx-auto flex">
        <div
          class="lg:w-1/3 md:w-1/2 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 relative z-10 shadow-md bg-base-100"
        >
          <h2 class="text-lg mb-1 font-medium">Feedback</h2>
          <p class="leading-relaxed mb-5">
            Post-ironic portland shabby chic echo park, banjo fashion axe
          </p>
          <div class="relative mb-4">
            <label for="email" class="leading-7 text-sm">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full rounded border border-gray-300 bg-white focus:border-primary focus:ring-2 focus:ring-primary text-base outline-none py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
            />
          </div>
          <div class="relative mb-4">
            <label for="message" class="leading-7 text-sm">Message</label>
            <textarea
              id="message"
              name="message"
              class="w-full rounded border border-gray-300 bg-white focus:border-primary focus:ring-2 focus:ring-primary h-32 text-base outline-none py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"
            ></textarea>
          </div>
          <button class="btn btn-primary rounded">Button</button>
          <p class="text-xs mt-3">
            Chicharrones blog helvetica normcore iceland tousled brook viral
            artisan.
          </p>
        </div>
      </div>
    </section>
  </main>
</Layout>
